@model Store_Shoe_Online.Models.ProductDetail
<div class="row">
    <div class="my-3">
        <h1>Thêm chi tiết sản phẩm</h1>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-3">
        <div class="form-group mandatory">
            <label asp-for="CodeColor"  class="form-label"></label>
            <input type="color" name="Details[0].CodeColor" asp-for="CodeColor" class="form-control" />
            <span asp-validation-for="CodeColor" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12 mt-3">
        <div class="form-group">
            <fieldset>
            <div class="input-group mb-3">
                <div class="input-group mb-3">
                    <label class="input-group-text" asp-for="upload"><i
                            class="bi bi-upload"></i></label>
                        <input type="file" class="form-control" name="Details[0].upload" asp-for="upload">
                        <span asp-validation-for="upload" class="text-danger"></span>
                </div>
            </div>
            </fieldset>
        </div>
    </div>
    <div class="col-12">
        <div class="form-group">
            <label asp-for="Amount"  class="form-label"></label>
            <input asp-for="Amount" name="Details[0].Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12">
        <div class="form-group">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" name="Details[0].Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
</div>